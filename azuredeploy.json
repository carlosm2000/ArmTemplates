{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables": {
    "resourcesApiVersion": "2018-05-01"
  },
  "parameters": {
    "templateLinkBase": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[uri(replace(json(string(deployment().properties.templateLink)).uri,' ','%20'), '.')]"
    },
    "templateLinkAccessToken": {
      "type": "securestring",
      "defaultValue": ""
    },

    "deploymentId": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]"
    },
    "location": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[resourceGroup().location]"
    },
    "sitecoreSKU": {
      "type": "string",
      "allowedValues": [ "Extra Small", "Small", "Medium", "Large", "Extra Large", "2x Large", "3x Large" ],
      "defaultValue": "Small",
      "metadata": {
        "description": "Sitecore SKU controls the sizes and service levels of the provisioned resources"
      }
    },
    "hubVNetAddressPrefix": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.1.0.0/24"
    },
    "hubVPNSubnetAddressPrefix": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.1.0.0/26"
    },
    "hubBastionSubnetAddressPrefix": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.1.0.64/26"
    },
    "hubFirewallSubnetAddressPrefix": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.1.0.128/26"
    },
    "spokeVNetAddressPrefix": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.0.0.0/20"
    },
    "spokeAppGatewaySubnetAddressPrefix": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.0.15.192/26"
    },
    "spokePrivateSubnetAddressPrefix": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.0.15.128/26"
    },
    "spokeClusterSubnetAddressPrefix": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.0.8.0/22"
    },
    "vmAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "vmAdminPassword": {
      "type": "string",
      "minLength": 1
    },
    "sqlServerLogin": {
      "type": "string",
      "minLength": 1
    },
    "sqlServerPassword": {
      "type": "securestring",
      "minLength": 8
    },
    "clusterDnsPrefix": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[concat(parameters('deploymentId'), '-aks')]"
    },
    "kubernetesVersion": {
      "type": "string",
      "defaultValue":"1.21.7",
      "metadata": {
        "description": "Kubernetes version"
      }
    },
    "dockerBridgeCidr": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "172.17.0.1/16"
    },
    "clusterServiceCidr": {
      "type": "string",
      "minLength": 9,
      "maxLength": 18,
      "defaultValue": "10.0.0.0/21"
    },
    "clusterDnsServiceIp": {
      "type": "string",
      "minLength": 7,
      "maxLength": 15,
      "defaultValue": "10.0.0.10"
    },
    "clusterManagedIdentityName": {
      "type": "string",
      "minLength": 1
    },
    "clusterWindowsUsername": {
      "type": "string",
      "minLength": 1
    },
    "clusterWindowsPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies the password for k8s windows nodes."
      }
    },
    "clusterLinuxUsername": {
      "type": "string",
      "minLength": 1
    },
    "clusterLinuxSSHKey": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies the SSH Key for k8s linux nodes."
      }
    },
    "sitecoreAdminPassword": {
      "type": "securestring",
      "minLength": 8
    }
  },
  "resources": [
    {
      "apiVersion": "[variables('resourcesApiVersion')]",
      "name": "[concat(parameters('deploymentId'), '-Networking')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(uri(parameters('templateLinkBase'), 'Networking/NetworkingWrapper.json'), parameters('templateLinkAccessToken'))]"
        },
        "parameters": {
          "deploymentId": {
            "value": "[parameters('deploymentId')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "hubVNetAddressPrefix": {
            "value": "[parameters('hubVNetAddressPrefix')]"
          },
          "hubVPNSubnetAddressPrefix": {
            "value": "[parameters('hubVPNSubnetAddressPrefix')]"
          },
          "hubBastionSubnetAddressPrefix": {
            "value": "[parameters('hubBastionSubnetAddressPrefix')]"
          },
          "hubFirewallSubnetAddressPrefix": {
            "value": "[parameters('hubFirewallSubnetAddressPrefix')]"
          },
          "spokeVNetAddressPrefix": {
            "value": "[parameters('spokeVNetAddressPrefix')]"
          },
          "spokeAppGatewaySubnetAddressPrefix": {
            "value": "[parameters('spokeAppGatewaySubnetAddressPrefix')]"
          },
          "spokePrivateSubnetAddressPrefix": {
            "value": "[parameters('spokePrivateSubnetAddressPrefix')]"
          },
          "spokeClusterSubnetAddressPrefix": {
            "value": "[parameters('spokeClusterSubnetAddressPrefix')]"
          }
        }
      }
    },
    {
      "apiVersion": "[variables('resourcesApiVersion')]",
      "name": "[concat(parameters('deploymentId'), '-Hub')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(uri(parameters('templateLinkBase'), 'Infrastructure/Hub/HubWrapper.json'), parameters('templateLinkAccessToken'))]"
        },
        "parameters": {
          "deploymentId": {
            "value": "[parameters('deploymentId')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "vmAdminUserName": {
            "value": "[parameters('vmAdminUserName')]"
          },
          "vmAdminPassword": {
            "value": "[parameters('vmAdminPassword')]"
          }
        }
      }
    }
